# ==============================================
# WhatsApp HubSpot Calling Integration
# Environment Configuration Template
# ==============================================

# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# ==============================================
# TWILIO CONFIGURATION
# ==============================================
# Get these from your Twilio Console
# https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# WhatsApp Business API number (must be approved by Twilio)
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Regular phone number for voice calls
TWILIO_VOICE_NUMBER=+1234567890

# ==============================================
# HUBSPOT CONFIGURATION
# ==============================================
# Create a HubSpot app at https://developers.hubspot.com/
HUBSPOT_APP_ID=your_hubspot_app_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
HUBSPOT_SCOPES=contacts,calling

# ==============================================
# SECURITY SETTINGS
# ==============================================
# Generate a strong random string for JWT signing
JWT_SECRET=your_very_secure_jwt_secret_key_here

# Session secret for additional security
SESSION_SECRET=your_session_secret_key_here

# ==============================================
# DATABASE & CACHE
# ==============================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# ==============================================
# WEBRTC CONFIGURATION
# ==============================================
# STUN servers for WebRTC (comma-separated)
STUN_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# ==============================================
# LOGGING & MONITORING
# ==============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# ==============================================
# RATE LIMITING
# ==============================================
# Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# WEBHOOK URLS
# ==============================================
# Your application's public URL (for Twilio webhooks)
# This should be your production domain with HTTPS
BACKEND_URL=https://your-domain.com

# ==============================================
# OPTIONAL: ADDITIONAL SERVICES
# ==============================================
# If using external monitoring services
# SENTRY_DSN=your_sentry_dsn
# NEW_RELIC_LICENSE_KEY=your_new_relic_key

# If using external analytics
# GOOGLE_ANALYTICS_ID=your_ga_id
# MIXPANEL_TOKEN=your_mixpanel_token